<?xml version="1.0" encoding="utf-8"?>
<com.localytics.ranialjondi.inboxtestapp.InboxEntryView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/status_indicator_static"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:weightSum="100">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="center_horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/thumbnail"
                android:layout_width="@dimen/profile_square_lengths"
                android:layout_height="@dimen/profile_square_lengths"
                android:layout_centerInParent="true"
                android:maxHeight="@dimen/profile_square_lengths"
                android:maxWidth="@dimen/profile_square_lengths"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_portrait_lg" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listing_title"
                style="@style/Inbox_Entry"
                android:text="It's pronounced Proxim-it" />

            <TextView
                android:id="@+id/listing_summary"
                style="@style/Inbox_Entry"
                android:text="Don't let others tell you otherwise" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/earned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="2dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                tools:text="$40" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black"
                android:paddingRight="2dp"
                android:textSize="14sp"
                tools:text="Status" />


        </LinearLayout>

    </com.localytics.ranialjondi.inboxtestapp.InboxEntryView>
